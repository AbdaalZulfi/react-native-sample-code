{
    "plugins": ["prettier-plugin-organize-attributes"],
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "printWidth": 90,
          "htmlWhitespaceSensitivity": "ignore",
          "singleAttributePerLine": true,
          "singleQuote": true,
          "tabWidth": 2,
          "semi": true,
          "useTabs": false,
          "bracketSpacing": true,
          "trailingComma": "es5",
          "bracketSameLine": false
        }
      },
      {
        "files": ["*.ts",  "*.tsx"] ,
        "options": {
          "singleQuote": true,
          "semi": true,
          "tabWidth": 2,
          "useTabs": false,
          "bracketSpacing": true,
          "arrowParens": "avoid",
          "trailingComma": "es5"
        }
      },
      {
        "files": ["*.scss", "*.css"],
        "options": {
          "printWidth": 90,
          "singleQuote": true,
          "tabWidth": 2,
          "useTabs": false,
          "bracketSpacing": false,
          "semi": false
        }
      }
    ]
  }
  